<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base" />

    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">@color/lightindigo</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/darklightindigo</item>
        <item name="android:background">@color/verydarkblue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderNormal">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/arvo</item>
    </style>

    <style name="HeaderNormalBig">
        <item name="android:textSize">27sp</item>
        <item name="fontFamily">@font/arvo</item>
    </style>

    <style name="HeaderNormalBigger">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/arvo</item>
    </style>
</resources>
